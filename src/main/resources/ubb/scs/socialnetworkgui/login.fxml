<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ubb.scs.socialnetworkgui.gui.Login">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcome" text="Log In" styleClass="label_title"/>
    <TextField fx:id="username" promptText="Username" styleClass="text-field"/>
    <PasswordField fx:id="password" promptText="Password" styleClass="text-field"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="login" text="Login" onAction="#onLoginClick"/>
        <Button fx:id="back" text="Back" onAction="#onBackClick"/>
    </HBox>
    <Label fx:id="error" text="" styleClass="error"/>

</VBox>
